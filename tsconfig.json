{
  "exclude": [
    "**/build",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2015",
    "lib": ["ESNext", "ES2019", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "inlineSourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "types": ["vitest/globals"]
  },
}
